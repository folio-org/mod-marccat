{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Record Templates definition",
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "id",
      "type": "integer"
    },
    "name": {
      "description": "The name of template",
      "type": "string"
    },
    "group": {
      "description": "The group of template",
      "type": "integer"
    },
    "type": {
      "description": "The type of template",
      "type": "string"
    },
    "leader": {
      "description": "The leader of template",
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "required": [
        "id"
      ]
    },
    "fields": {
      "description": "The fields of template",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "field.json"
      }
    }
  },
  "metadata": {
    "description": "Metadata about creation and changes, provided by the server (client should not provide)",
    "type": "object",
    "$ref": "../../raml-util/schemas/metadata.schema",
    "readonly": true
  },
  "required": [
    "name",
    "type"
  ]
}
