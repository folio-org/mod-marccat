<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 2.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="org.folio.cataloging.business.cataloguing.authority.AuthorityModelItem"
		table="AUTHORITY_MODEL_ITEM">
		<id name="item">
			<column name="ITEM" sql-type="NUMBER (11)" not-null="true"/>
			<generator class="assigned"/>
		</id>
		<many-to-one name="model" column="MODEL" 
		   class="org.folio.cataloging.business.cataloguing.authority.AuthorityModel"
		   not-null="true"/>
		<property name="xmlFields" column="XML_FIELDS" 
		   type="librisuite.business.common.hibernate.StringClobType"/>
	</class>
</hibernate-mapping>
