<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 2.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping package="org.folio.marccat.dao.persistence">
	<class name="SortCriteriaDetails"  schema="olisuite"  table="S_SRT_CRTRIA_DTL" mutable="false">
		<composite-id>
			<key-property name="code" column="SRT_CRTRIA_CDE"/>
			<key-property name="sequence" column="SEQ"/>
		</composite-id>
		<property name="attribute">
			<column name="ATTRB" not-null="true"/>
		</property>
		<property name="direction">
			<column name="DESC_IND" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>
