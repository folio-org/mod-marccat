{
	"id": "${artifactId}:${version}",
	"name": "MARCcat Module",
	"requires": [
		{
			"id": "configuration",
			"version": "2.0"
		}
	],
	"provides": [
		{
			"id": "marccat",
			"version": "1.4",
			"handlers": [
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/search",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/mergedSearch",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/searchVertical",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/document-count-by-id",
					"permissionsRequired": [
						"marccat.record.count.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/browse",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/next-page",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/previous-page",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/headings-by-tag",
					"permissionsRequired": [
						"marccat.records.collection.get"
					],
					"modulePermissions": []
				},
				{
					"methods": [
						"GET"
					],
					"pathPattern": "/filteredTagsList",
					"permissionsRequired": [
						"marccat.tag.collection.get"
					],
					"modulePermissions": []
				}
			]
		}
	],
	"permissionSets": [
		{
			"permissionName": "marccat.records.collection.get",
			"displayName": "MARCcat - get marc records collection",
			"description": "Get marc records collection"
		},
		{
			"permissionName": "marccat.record.count.get",
			"displayName": "MARCcat - get count of document by id",
			"description": "Get count of MARC document by id"
		},
		{
			"permissionName": "marccat.tag.collection.get",
			"displayName": "MARCcat - get marc tag collection for auto suggest",
			"description": "Get marc tag collection for auto suggest"
		}
	],
	"launchDescriptor": {
		"dockerImage": "${artifactId}:${version}",
		"dockerArgs": {
			"HostConfig": {
				"PortBindings": {
					"9403/tcp": [
						{
							"HostPort": "%p"
						}
					]
				}
			}
		},
		"dockerPull": false
	}
}
