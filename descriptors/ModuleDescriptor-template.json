{
  "id": "@artifactId@-@version@",
  "name": "MARCcat",
  "requires": [
    {
      "id": "configuration",
      "version": "2.0"
    }
  ],
  "provides": [
    {
      "id": "marccat",
      "version": "2.1",
      "handlers": [
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/search",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/searchAuth",
          "permissionsRequired": [
            "marccat.authority.collection.get"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/mergedSearch",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/searchVertical",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/countSearch",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/document-count-by-id",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/bibliographic/fields/mandatory",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/field-template",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/browse",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/next-page",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/previous-page",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/headings-by-tag",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/filteredTagsList",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/filteredTag",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/validateTag",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/record-templates",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/record-template/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/record-template",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/marccat/record-template/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/record-template/from-record",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/marccat/record-template/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/authority-record",
          "permissionsRequired": [
            "marccat.authority.insert.post"
          ]
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/bibliographic-record",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/bibliographic-record/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/marccat/bibliographic-record/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/bibliographic-record/from-template/{idTemplate}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/bibliographic-record/duplicate",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/bibliographic-record/fixed-field-display-value",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/fixed-fields-code-groups-by-leader",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/fixed-fields-code-groups",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/header-types",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/marccat/auth-header-types",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/create-heading",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/marccat/load-from-file",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/marccat/bibliographic-record/lock/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/marccat/bibliographic-record/unlock/{id}",
          "modulePermissions": [
            "configuration.all"
          ],
          "permissionsRequired": []
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.2",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "marccat.records.collection.get",
      "displayName": "MARCcat - get marc records collection",
      "description": "Get marc records collection"
    },
    {
      "permissionName": "marccat.record.count.get",
      "displayName": "MARCcat - get count of document by id",
      "description": "Get count of MARC document by id"
    },
    {
      "permissionName": "marccat.tag.collection.get",
      "displayName": "MARCcat - get marc tag collection for auto suggest",
      "description": "Get marc tag collection for auto suggest"
    },
    {
      "permissionName": "marccat.record.unlock.delete",
      "displayName": "MARCcat - unlock record",
      "description": "Unlock MARC record"
    },
    {
      "permissionName": "marccat.record.lock.put",
      "displayName": "MARCcat - lock record",
      "description": ":Lock MARC record"
    },
    {
      "permissionName": "marccat.tag.heading.post",
      "displayName": "MARCcat - create new heading for tag",
      "description": "Create new heading in tag for MARC record"
    },
    {
      "permissionName": "marccat.tag.value.post",
      "displayName": "MARCcat - tag display value",
      "description": "Display value in tag for MARC record"
    },
    {
      "permissionName": "marccat.record.insert.post",
      "displayName": "MARCcat - save/update record",
      "description": "Save or update MARC record"
    },
    {
      "permissionName": "marccat.authority.collection.get",
      "displayName": "MARCcat - get authority collection",
      "description": "Get MARC authority record collection"
    },
    {
      "permissionName": "marccat.authority.insert.post",
      "displayName": "MARCcat - save authority record",
      "description": "Save MARC authority record"
    },
    {
      "permissionName": "marccat.all",
      "displayName": "MARCcat - all permissions",
      "description": "Entire set of permissions needed to use the MARCcat",
      "subPermissions": [
        "marccat.authority.insert.post",
        "marccat.record.insert.post",
        "marccat.tag.value.post",
        "marccat.tag.heading.post",
        "marccat.record.lock.put",
        "marccat.record.unlock.delete",
        "marccat.tag.collection.get",
        "marccat.record.count.get",
        "marccat.records.collection.get",
        "marccat.authority.collection.get"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 872415232,
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "env": [
      {
        "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      {
        "name": "DB_HOST",
        "value": "postgres"
      },
      {
        "name": "DB_PORT",
        "value": "5432"
      },
      {
        "name": "DB_USERNAME",
        "value": "folio_admin"
      },
      {
        "name": "DB_PASSWORD",
        "value": "folio_admin"
      },
      {
        "name": "DB_DATABASE",
        "value": "okapi_modules"
      },
      {
        "name": "DB_QUERYTIMEOUT",
        "value": "60000"
      },
      {
        "name": "DB_CHARSET",
        "value": "UTF-8"
      },
      {
        "name": "DB_MAXPOOLSIZE",
        "value": "5"
      }
    ]
  }
}
